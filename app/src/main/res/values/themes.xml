<resources>
    <!-- Base application theme. -->
    <style name="Theme.TheChef" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5bd3b8</item>
        <item name="colorPrimaryVariant">#49c8a8</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TheChef.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_splash</item>

        <item name="postSplashScreenTheme">@style/Theme.TheChef</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize8dp" parent="">
        <item name="cornerSize">8dp</item>
    </style>
</resources>